{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "@env/*": [
        "../src/environments/*"
      ],
      "@shared/*": [
        "../src/app/shared/*"
      ],
      "@core/*": [
        "../src/app/core/*"
      ],
      "@admin/*": [
        "../src/app/admin/*"
      ],
      "@user/*": [
        "../src/app/user/*"
      ],
      "@dev-console/*": [
        "../src/app/dev-console/*"
      ],
      "@store/*": [
        "../src/app/store/*"
      ],
      "@store": [
        "../src/app/store"
      ]
    }
  },
  "files": [
    "../unit-tests/test.ts",
    "../src/polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
